{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  }, 
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
